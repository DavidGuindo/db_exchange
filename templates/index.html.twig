            <section>
                <br>
                    <br>
                        <!--AQUI APARECERAN UNA LISTA DE SERVICIOS CON UNA BARRA PARA SELECCIONAR CATEGORIA ARRIBA Y PODER FILTRAR-->
                        <form action="/buscador" method="POST">
                            {% if all_cities is defined %}
                                <select name="ciudadElegida">
                                    <option value="0">SELECCIONE UNA CIUDAD</option>
                                    {% for city in all_cities %}
                                        <option value="{{city.name}}">
                                            {{city.name}}</option>
                                    {% endfor %}
                                </select>
                            {% endif %}
                            <select name="categoriaElegida">
                                <option value="0">SELECCIONE UNA CATEGORIA</option>
                                {% for category in all_categories %}
                                    <option value="{{category.name}}">
                                        {{category.name}}</option>
                                {% endfor %}
                            </select>
                            <input type="submit" value="Filtrar"></form>
                            <table style="width:100%">
                                {% set counter = 1 %}
                                {% for service in all_services %}
                                    <div id="services">
                                        {%  if counter == 0 %}
                                            <tr>
                                            {% endif %}
                                            <td style="background-image:{event.image}};width:30%; border:1px solid black; margin:5px; padding:5px; text-align:center">
                                                <div class="card" style="width: 18rem;">
                                                    <img alt="Card image cap" class="card-img-top" src="IMAGEN SERVICIO">
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                {{service.getName}}</h5>
                                                            <h5 class="card-title">
                                                                {{service.getUserOffer.getName}}</h5>
                                                            <h5 class="card-title">
                                                                {{service.getCity.getName}}</h5>
                                                            <p class="card-text">
                                                                {{service.getTime}}m</p>
                                                            <!--ESTE FORMULARIO ENVIA UN MENSAJE DE SOLICITUD PREDEFINIDO-->
                                                            <form action="./sendRequest" method="POST">
                                                                <button class="btn btn-primary" type="submit">Solicitar servicio</button>
                                                                <input type="hidden" value="{{service.getId}}" name="serviceId"></form>
                                                            </div>
                                                        </div>
                                                    </section>
                                                </td>
                                                {%  if counter == 3 %}
                                                </tr>
                                                {% set counter = 0 %}
                                            {% endif %}
                                            {% set counter = counter + 1 %}
                                        </div>
                                    {% endfor %}
                                </table>
                            </section>
